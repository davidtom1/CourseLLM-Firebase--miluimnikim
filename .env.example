# ============================================================================
# CourseWise - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values.
# This file is safe to commit (contains only placeholders).

# ============================================================================
# Test Authentication & Feature Flags
# ============================================================================
# Enable test authentication endpoint for E2E tests
ENABLE_TEST_AUTH=true

# Enable IST development/test endpoint
ENABLE_IST_DEV_TEST_ENDPOINT=false

# Enable IST demo mode (fake user + fake chat history for frontend testing)
IST_DEMO_MODE=true

# ============================================================================
# Google API & AI Services
# ============================================================================
# Get your API key from: https://console.cloud.google.com or https://aistudio.google.com/app/apikey
# Required for: Gemini LLM, Google GenAI, Socratic tutoring, Genkit AI

GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-google-api-key-here

# ============================================================================
# Firebase Configuration (Client-Side)
# ============================================================================
# These are used by src/firebase.ts for client-side Firebase initialization
# Get these from: https://console.firebase.google.com
# When using Firebase Emulator, these can be demo values.

NEXT_PUBLIC_FIREBASE_API_KEY=demo-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=demo.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=coursewise-f2421
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=demo.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=1234567890
NEXT_PUBLIC_FIREBASE_APP_ID=demo-app-id

# Legacy REACT_APP_* variables (for backward compatibility)
REACT_APP_FIREBASE_API_KEY=demo-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=demo.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=coursewise-f2421
REACT_APP_FIREBASE_STORAGE_BUCKET=demo.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=1234567890
REACT_APP_FIREBASE_APP_ID=demo-app-id

# ============================================================================
# Firebase Emulator (Client-Side)
# ============================================================================
# Set to true to use Firebase Emulator instead of production Firebase
NEXT_PUBLIC_FIREBASE_USE_EMULATOR=true

# Emulator host/port configuration (optional, defaults shown)
FIRESTORE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001

# ============================================================================
# Firebase Data Connect Configuration (Backend-Only)
# ============================================================================
# Firebase project ID for backend Data Connect operations
FIREBASE_PROJECT_ID=coursewise-f2421

# ============================================================================
# DSPy Service Configuration
# ============================================================================
# URL of the Python DSPy FastAPI service (used for IST pipeline)
# Default: http://localhost:8000 (local development)
DSPY_SERVICE_URL=http://localhost:8000
NEXT_PUBLIC_DSPY_SERVICE_URL=http://localhost:8000

# ============================================================================
# IST Pipeline Configuration
# ============================================================================
# IST storage mode: 'json' (default, local file) or 'postgres' (future)
IST_STORAGE_MODE=json

# IST engine mode: 'api' (Next.js API route) or 'callable' (Firebase Cloud Function)
NEXT_PUBLIC_IST_ENGINE_MODE=api
